{
  "name": "decrorate-ts",
  "version": "1.0.0",
  "description": "TypeScript decorators for Final, Frozen, Sealed, and Singleton patterns",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": ["dist/**/*", "README.md"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check . && tsc --noEmit",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "release": "npm publish --access public"
  },
  "keywords": [
    "typescript",
    "decorators",
    "final",
    "frozen",
    "sealed",
    "singleton",
    "patterns"
  ],
  "author": "@rccyx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rccyx/decorators.git"
  },
  "bugs": {
    "url": "https://github.com/rccyx/decorators/issues"
  },
  "homepage": "https://github.com/rccyx/decorators#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "typescript": "^5.6.3",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "dependencies": {
    "ts-roids": "^1.51.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18"
  }
}

